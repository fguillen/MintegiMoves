<% title "Item > #{@item.title}" %>

<div class="row">
  <div class="col-md-4 item show">
    <h2 class="font_title"><%= @item.title %></h2>
    <div class="intro">
      <%= @item.text.to_md %>
    </div>
    <div class="text">
      <%= @item.text.to_md %>
    </div>
  </div>
  <div class="col-md-8">
    <ul>
      <% @item.pics.by_position.each do |pic| %>
        <li>
          <%= image_tag pic.attach(:front_big) %>
          <!-- <p><%= pic.title %></p> -->
        </li>
      <% end %>
    </ul>
  </div>
</div>

