<dl class="dl-horizontal">
  <dt>Id</dt><dd><%= item.id %></dd>
  <dt>Title</dt><dd><%= item.title %></dd>
  <dt>Category</dt><dd><%= render_label item.category.title, :tags %></dd>
  <dt>Intro</dt><dd><%= item.intro.to_md %></dd>
  <dt>Text</dt><dd><%= item.text.to_md %></dd>
</dl>

<p>
  <%= link_to "See Item", [:front, item.category, item], :target => "_blank" %> |
  <%= link_to "Edit", edit_admin_item_path(item) %> |
  <%= link_to "Destroy", [:admin, item], :confirm => "Are you sure?", :method => :delete %>
</p>