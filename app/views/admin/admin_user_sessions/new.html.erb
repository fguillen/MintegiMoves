<% title "Login" %>

<%= form_for [:admin, @admin_user_session], :html => { :class => "form-horizontal" } do |f| %>
  <%= render "/shared/form_errors", :object => f.object %>

  <fieldset>
    <legend><%= "Use your credentials" %></legend>

    <div class="form-group">
      <%= f.label :email, :class => "col-lg-2 control-label" %>

      <div class="col-lg-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="icon-envelope"></i></span>
          <%= f.text_field :email, :class => "form-control", :type => "email" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, :class => "col-lg-2 control-label" %>

      <div class="col-lg-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="icon-lock"></i></span>
          <%= f.password_field :password, :class => "form-control", :type => "password" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-offset-2 col-lg-10">
        <%= f.submit "Sign in", :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>

  <p><%= link_to "Forgot password", admin_forgot_password_path %></p>
<% end %>


